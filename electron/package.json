{
  "name": "obs-assistant",
  "version": "1.0.0",
  "description": "OBS Assistant Chatbot",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:backend": "cd .. && pyinstaller --noconfirm --onedir backend/main.py --name backend --distpath electron/py",
    "build:electron": "electron-builder --win",
    "build": "npm run build:backend && npm run build:electron"
  },
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.obs-assistant.app",
    "productName": "obs-assistant",
    "win": {
      "target": "nsis",
      "icon": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "node_modules/geist/**/*"
    ],
    "extraResources": [
      {
        "from": "py/",
        "to": "py/"
      }
    ]
  },
  "devDependencies": {
    "electron": "23.1.3",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "geist": "^1.7.0"
  }
}
